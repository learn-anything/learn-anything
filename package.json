{
	"name": "learn-anything",
	"scripts": {
		"dev": "bun web",
		"web": "cd web && bun dev",
		"web:build": "bun run --filter '*' build",
		"cli": "bun run --watch cli/run.ts",
		"seed": "bun --watch cli/seed.ts",
		"dev-seed": "bun --watch cli/dev-seed.ts"
	},
	"workspaces": [
		"web"
	],
	"dependencies": {
		"framer-motion": "^11.3.28",
		"jazz-nodejs": "^0.7.33",
		"react-icons": "^5.3.0"
	},
	"devDependencies": {
		"bun-types": "^1.1.25"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-tailwindcss"
		],
		"useTabs": true,
		"semi": false,
		"trailingComma": "none",
		"printWidth": 120,
		"arrowParens": "avoid"
	},
	"license": "MIT"
}
