{
	"name": "learn-anything",
	"scripts": {
		"dev": "bun web",
		"web": "cd web && bun dev",
		"web:build": "bun run --filter '*' build",
		"ts": "bun run --watch scripts/run.ts",
		"seed": "bun --watch scripts/seed.ts",
		"tauri": "tauri",
		"app": "tauri dev",
		"app:build": "bun tauri build -b dmg -v"
	},
	"workspaces": [
		"web"
	],
	"dependencies": {
		"@clerk/themes": "^2.1.27",
		"@tauri-apps/cli": "^2.0.0-rc.12",
		"@tauri-apps/plugin-fs": "^2.0.0-rc.2",
		"jazz-nodejs": "0.7.35-guest-auth.5",
		"react-icons": "^5.3.0",
		"tailwind-scrollbar-hide": "^1.1.7"
	},
	"devDependencies": {
		"bun-types": "^1.1.27"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-tailwindcss"
		],
		"useTabs": true,
		"semi": false,
		"trailingComma": "none",
		"printWidth": 120,
		"arrowParens": "avoid"
	},
	"license": "MIT"
}
