{
	"productName": "Learn Anything",
	"version": "0.1.0",
	"identifier": "xyz.learnanything.desktop",
	"build": {
		"frontendDist": "../web/.output/public",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun web:build"
	},
	"app": {
		"windows": [
			{
				"title": "Learn Anything",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
