    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "strict": true,
    "types": ["solid-start/env", "bun-types"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./app/*", "./api/*"]
